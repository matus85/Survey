<script>
	var qu=1
	function addQuestion(){
		qu=qu+1;
		$.ajax({
  			url: 'questionAdd',
			data: 'q='+qu,
  			success: function(html){
    		$("#add").append(html);
  }
});
		 	  
	};
</script>

<%= link_to("Back to List", {:action =>'list'}, :class=>'back-link')%>
 
 
 <div class="Survey new">
 	<%= form_for(@survey, :url => {:action => 'create'}) do |f|%>
	<table summary="Survey form fields">
		<tr>
			<th>Survey Name</th>
			<td><%= f.text_field(:title)%></td>			
		</tr>
		<tr><td></td><td><input type="button" onclick="addQuestion();" value="Add Question"></td></tr>
	</table>
	<div id="add">
		<table>		
		 <tr>
			<th>Question</th>
			<td><input type="text" id="question_title" name="question[title(1i)]" size="30"></td>
		 		
	 	</tr>
		</table>

	</div>
	<div class="form-buttons">
		<%= submit_tag("Create Survey")%>
	</div>
	<%end%>
	
	
	
	
	
	
	
	</div>

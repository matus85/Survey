<script>
	var qu=1
	function addQuestion(){
		qu=qu+1;
		var x= "<th>Question</th>"
		x = x + '<td><input type="text" id="question_title" name="question[title('+qu+'i)]" size="30"></td>'			
		x = x + '<td><input type="button" value="Remove" onclick="$(this).parent().parent().remove();"></td>'
		$("#add").append("<tr>"+x+"</tr>");
	};
</script>


<%= link_to("Back to List", {:action =>'list'}, :class=>'back-link')%>
 
 
 <div class="Survey new">

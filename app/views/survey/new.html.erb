<script>
	var qu=1
	function addQuestion(){
		qu=qu+1;
		var x= "<th>Question</th>"
		x = x + '<td><input type="text" id="question_title" name="question[title('+qu+'i)]" size="30"></td>'			
		x = x + '<td><input type="button" value="Remove" onclick="$(this).parent().parent().remove();"></td>'
		$("#add").append("<tr>"+x+"</tr>");
	};
</script>
 
 <div class="Survey new">
 	<%= form_for(@survey, :url => {:action => 'create'}) do |f|%>
	<table id="add" summary="Survey form fields">
		<tr>
			<th>Survey Name</th>
			<td><%= f.text_field(:title)%></td>			
		</tr>
		
		<tr>
			<td style="background-color: #d0e4fe;"></td>
		 
			<td style="background-color: #d0e4fe;"><input type="button" onclick="addQuestion();" value="Add Question" /></td>
		</tr>
		
		
		<tr>
			<th>Question</th>
			<td><input type="text" id="question_title" name="question[title(1i)]" size="30" /></td>
		</tr>
		
	
	</table>
	 <table>
	 	<tr>
	 		<td>
	 			<%= submit_tag("Create Survey")%>
	 		</td>
	 	</tr>
	 </table>
	<%end%>
	 </div>
	 
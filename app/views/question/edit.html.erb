	  <title>Edit A Question </title>
	  <%= javascript_include_tag :defaults %>
	  <%= yield :head %>
  </head>
  <body>
  <%= yield %>
  <h1> Edit Question </h1>
  <%= form_for :question, @question  do |question_form| %>
